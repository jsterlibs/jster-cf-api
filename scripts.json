{
  "allow": ["net", "read"],
  "scripts": {
    "worker:serve-ping": {
      "cmd": "denoflare serve ping"
    },
    "worker:publish-ping": {
      "cmd": "denoflare push ping"
    },
    "worker:serve-stargazers": {
      "cmd": "denoflare serve stargazers --cert-pem cert.pem --key-pem key.pem"
    },
    "worker:publish-stargazers": {
      "cmd": "denoflare push stargazers"
    },
    "worker:serve-security": {
      "cmd": "denoflare serve security"
    },
    "worker:publish-security": {
      "cmd": "denoflare push security"
    }
  }
}
